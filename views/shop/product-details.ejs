<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../includes/head.ejs')%>
  </head>
  <body>
    <%- include('../includes/nav-bar.ejs') %>
    <div class="product_details">
      <h1><%= prodDetails.title%></h1>
      <hr />
      <img src="<%= prodDetails.imageURL %>" alt="<%= prodDetails.title%>" />
      <p><%= prodDetails.price%></p>
      <p><%= prodDetails.description%></p>
      <form action="/add-to-cart" method="POST">
        <button type="submit">Add to cart</button>
        <input type="hidden" name="id" value="<%= prodDetails.id%>" />
      </form>
    </div>
  </body>
</html>
